%link{:rel => "stylesheet", :type => "text/css", :href => "https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.3.0/animate.min.css"}
.wrapper_with_padding
  #notes.clearfix
    - unless @notes.blank?
      -@notes.each do |note|
        %a{ href: (url_for  [note]) }
          .note.animated.zoomInLeft
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 Add a New Note
      %p You have no notes!

  =link_to "+", new_note_path, class:"btn-floating btn-large waves-effect waves-light red right", data: { no_turbolink: true }

