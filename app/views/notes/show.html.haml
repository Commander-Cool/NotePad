.wrapper_with_padding
  #note_show
    %h1= @note.title
    %hr
    %p= simple_format(@note.content)


    .buttons
      = link_to "Edit", edit_note_path(@note), class: "waves-effect waves-light btn", data: { no_turbolink: true }
      = link_to "Delete", note_path, method: :delete, data:{confirm: "Are you sure?"}, class: "waves-effect waves-light btn", data: { no_turbolink: true }
      = link_to "Home", root_path, class: "waves-effect waves-light btn"