!!!
%html
  %head
    %title NoteBook+
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:rel => "stylesheet", :type => "text/css", :href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css"}
  %body
    %header
      %nav
        .nav-wrapper
          = link_to "NotePad+", root_path, id:"logo", class: "brand-logo", style: "padding-left: 10px;"
          %ul{:id => "nav-mobile", :class => "right hide-on-med-and-down"}
            - if user_signed_in?
              %li
                =link_to "New Note", new_note_path, data: { no_turbolink: true }
              %li
                =link_to "Sign Out", destroy_user_session_path, method: :delete
            - else
              %li
                =link_to "Log In", new_user_session_path

    %p.notice= notice
    %p.alert= alert

    =yield

  %script{:type => "text/javascript",
        :src  => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"}